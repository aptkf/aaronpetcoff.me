<article>
  <h1>{{model.title}}</h1>
  <span class="post-info">{{moment-format model.created "YYYY.MM.DD"}} |
  <span class="post-tags">
    {{#each model.tags as |tag|}}
      {{#link-to "blog.tags" tag class="post-tags-tag"}}{{tag}}{{/link-to}}
    {{/each}}
  </span></span>

  {{{model.body}}}

  <div class="post-nav">
    {{#if model.slugs.prev}}
      {{#link-to "blog.post" model.slugs.prev class="post-nav-previous"}}Previous{{/link-to}}
    {{/if}}

    {{#if model.slugs.next}}
      {{#link-to "blog.post" model.slugs.next class="post-nav-next"}}Next{{/link-to}}
    {{/if}}
  </div>
</article>
